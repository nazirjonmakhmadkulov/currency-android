<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            app:icon="@drawable/round_refresh"
            app:iconSpaceReserved="false"
            app:key="auto"
            app:summary="@string/pol_update"
            app:title="@string/auto_update" />
    </PreferenceCategory>

    <PreferenceCategory app:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            app:icon="@drawable/baseline_color_lens"
            app:iconSpaceReserved="false"
            app:key="theme"
            app:summaryOff="@string/theme_light"
            app:summaryOn="@string/theme_dark"
            app:title="@string/theme_app" />
    </PreferenceCategory>

    <PreferenceCategory app:iconSpaceReserved="false">
        <ListPreference
            app:dialogTitle="@string/language"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:icon="@drawable/baseline_language"
            app:key="key_language"
            app:title="@string/language"
            app:defaultValue="ru"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:iconSpaceReserved="false">
        <Preference
            app:icon="@drawable/ic_favorite"
            app:iconSpaceReserved="false"
            app:key="favorite"
            app:summary="@string/favorites_valutes"
            app:title="@string/favorites" />
    </PreferenceCategory>

    <PreferenceCategory app:iconSpaceReserved="false">
        <Preference
            app:icon="@drawable/ic_widget"
            app:iconSpaceReserved="false"
            app:isPreferenceVisible="false"
            app:key="widget"
            app:summary="@string/widget"
            app:title="@string/widget" />
    </PreferenceCategory>

</PreferenceScreen>